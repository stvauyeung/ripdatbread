<!DOCTYPE html>
<html ng-app='bread'>
<head>
  <title>#RipDatBread</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %><a class="close" data-dismiss="alert" area-hidden="true" style="color: white;">x</a></div>
<% end %>
<alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">
  <span ng-bind-html="alert.msg"></span>
</alert>
<%= yield %>

</body>
</html>
